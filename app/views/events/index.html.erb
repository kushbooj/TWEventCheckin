<div class="container">
  <%= tabs_tag :open_tabs => {:id => 'tabs', :class => 'nav nav-tabs top-margin-20'} do |tab| %>
      <%= tab.event 'Events', root_path, :class => 'nav-item' %>
      <%= tab.participant 'Participants', '/participants', :class => 'nav-item' %>
  <% end %>

  <p id="notice" class="success top-margin-20"><%= notice %></p>

  <h1>Events</h1>

  <table class="table table-striped">
    <thead>
    <tr>
      <th scope="row">Name</th>
      <th scope="row">Edition</th>
      <th scope="row">Date</th>
      <th colspan="3" scope="row"></th>
    </tr>
    </thead>

    <tbody>
    <% @events.each do |event| %>
        <tr>
          <td><%= event.name %></td>
          <td><%= event.edition %></td>
          <td><%= event.date %></td>
          <td><%= link_to 'Show', event %></td>
          <td><%= link_to 'Edit', edit_event_path(event) %></td>
          <td><%= link_to 'Destroy', event, method: :delete, data: {confirm: 'Are you sure?'} %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Event', new_event_path %>
</div>