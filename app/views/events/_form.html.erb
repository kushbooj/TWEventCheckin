<%= form_for(event) do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation" class="top-margin-20 error">
      <div><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</div>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= f.label :edition %>
    <%= f.number_field :edition %>
  </div>

  <div class="form-group">
    <%= f.label :date %>
    <%= f.datetime_select :date %>
  </div>

  <div class="form-group">
    <%= f.submit %>
  </div>
<% end %>
